        }

        .mb-12 {
            margin-bottom: 12px;
        }

        .mb-15 {
            margin-bottom: 15px;
        }

        .hidden {
            display: none;
        }

        /* Scrollbar Styling */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: var(--accent);
            border-radius: 3px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 3px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--primary-dark);
        }

        /* Drag and Drop */
        .drag-over {
            background: rgba(162, 22, 28, 0.1) !important;
            border: 2px dashed var(--primary) !important;
        }
    </style>
</head>
