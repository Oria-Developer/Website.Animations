    <script>
        // Application State
        const state = {
            user: null,
            shiftStart: null,
            calls: [],
            units: [],
            activeCall: null,
            callCounter: 1,
            selectedPriority: 'medium',
            selectedUnitStatus: '10-8',
            selectedDepartment: 'law-enforcement',
            activePrioritySituation: null
        };

        // DOM Elements
        const loginScreen = document.getElementById('login-screen');
        const cadApp = document.getElementById('cad-app');
        const loginForm = document.getElementById('login-form');
        const confirmationModal = document.getElementById('confirmation-modal');
        const closeConfirmationBtn = document.getElementById('close-confirmation');
        const signOutBtn = document.getElementById('sign-out-btn');
        const displayUserId = document.getElementById('display-user-id');
        const shiftTimer = document.getElementById('shift-timer');
        const priorityAlert = document.getElementById('priority-alert');
        const callList = document.getElementById('call-list');
        const unitList = document.getElementById('unit-list');
        const activeIncidentHeader = document.getElementById('active-incident-header');
        const narrativeLog = document.getElementById('narrative-log');
        const narrativeInput = document.getElementById('narrative-input');
        const addNarrativeBtn = document.getElementById('add-narrative');
        const assignedUnits = document.getElementById('assigned-units');
        const priorityBtn = document.getElementById('priority-btn');
        const newCallBtn = document.getElementById('new-call-btn');
        const newCallModal = document.getElementById('new-call-modal');
        const newCallForm = document.getElementById('new-call-form');
        const cancelCallBtn = document.getElementById('cancel-call');
        const priorityModal = document.getElementById('priority-modal');
        const cancelPriorityBtn = document.getElementById('cancel-priority');
        const addUnitBtn = document.getElementById('add-unit-btn');
        const addUnitModal = document.getElementById('add-unit-modal');
        const addUnitForm = document.getElementById('add-unit-form');
        const cancelUnitBtn = document.getElementById('cancel-unit');
        const closeButtons = document.querySelectorAll('.close-modal');

        // Initialize the application
        function init() {
            // Check if user is already logged in (for page refresh)
            const savedUser = localStorage.getItem('lkv_user');
            if (savedUser) {
                state.user = JSON.parse(savedUser);
                state.shiftStart = new Date(localStorage.getItem('lkv_shift_start'));
                startCAD();
            }

            // Event Listeners
            loginForm.addEventListener('submit', handleLogin);
            closeConfirmationBtn.addEventListener('click', closeConfirmation);
            signOutBtn.addEventListener('click', handleSignOut);
            newCallBtn.addEventListener('click', () => newCallModal.style.display = 'flex');
            cancelCallBtn.addEventListener('click', () => newCallModal.style.display = 'none');
            newCallForm.addEventListener('submit', handleNewCall);
            priorityBtn.addEventListener('click', () => priorityModal.style.display = 'flex');
            cancelPriorityBtn.addEventListener('click', () => priorityModal.style.display = 'none');
            addUnitBtn.addEventListener('click', () => addUnitModal.style.display = 'flex');
            cancelUnitBtn.addEventListener('click', () => addUnitModal.style.display = 'none');
            addUnitForm.addEventListener('submit', handleAddUnit);
            addNarrativeBtn.addEventListener('click', addNarrativeEntry);
            narrativeInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') addNarrativeEntry();
            });

            // Status option selection
            document.querySelectorAll('.status-option').forEach(option => {
                option.addEventListener('click', function() {
                    const parent = this.closest('.form-group');
                    parent.querySelectorAll('.status-option').forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                    
                    if (parent.querySelector('#unit-id')) {
                        state.selectedUnitStatus = this.getAttribute('data-value');
                    } else {
                        state.selectedPriority = this.getAttribute('data-value');
                    }
                });
            });

            // Department option selection
            document.querySelectorAll('.department-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('.department-option').forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                    state.selectedDepartment = this.getAttribute('data-department');
                });
            });

            // Priority option selection
            document.querySelectorAll('.priority-option').forEach(option => {
                option.addEventListener('click', function() {
                    const situationType = this.getAttribute('data-type');
                    activatePrioritySituation(situationType);
                    priorityModal.style.display = 'none';
                });
            });

            closeButtons.forEach(button => {
                button.addEventListener('click', () => {
                    newCallModal.style.display = 'none';
                    addUnitModal.style.display = 'none';
                    priorityModal.style.display = 'none';
                });
            });

            // Close modals when clicking outside
            window.addEventListener('click', (event) => {
                if (event.target === newCallModal) newCallModal.style.display = 'none';
                if (event.target === addUnitModal) addUnitModal.style.display = 'none';
                if (event.target === priorityModal) priorityModal.style.display = 'none';
            });

            // Setup drag and drop
            setupDragAndDrop();
        }

        // Setup drag and drop functionality
        function setupDragAndDrop() {
            const assignedUnitsContainer = document.getElementById('assigned-units');
            
            // Allow drop
            assignedUnitsContainer.addEventListener('dragover', (e) => {
                e.preventDefault();
                assignedUnitsContainer.classList.add('drag-over');
            });
            
            assignedUnitsContainer.addEventListener('dragleave', () => {
                assignedUnitsContainer.classList.remove('drag-over');
            });
            
            // Handle drop
            assignedUnitsContainer.addEventListener('drop', (e) => {
                e.preventDefault();
                assignedUnitsContainer.classList.remove('drag-over');
                
                const unitId = e.dataTransfer.getData('text/plain');
                if (unitId && state.activeCall) {
                    if (!state.activeCall.assignedUnits.includes(unitId)) {
                        state.activeCall.assignedUnits.push(unitId);
                        renderAssignedUnits();
                        
                        // Add narrative entry
                        state.activeCall.narrative.push({
                            timestamp: new Date(),
                            text: `Unit ${unitId} assigned to incident via drag & drop.`
                        });
                        renderNarrativeLog();
                    }
                }
            });
        }

        // Activate a priority situation
        function activatePrioritySituation(situationType) {
            state.activePrioritySituation = situationType;
            
            // Extract code from situation type (e.g., "10-80 Pursuit" -> "10-80")
            const code = situationType.split(' ')[0];
            
            // Show priority alert
            priorityAlert.textContent = `${situationType} ACTIVE`;
            priorityAlert.style.display = 'block';
            
            // Add animation for slashing effect
            let slashVisible = true;
            const slashInterval = setInterval(() => {
                priorityAlert.textContent = slashVisible ? 
                    `${situationType} ACTIVE` : 
                    `${situationType} ACTIVE`;
                slashVisible = !slashVisible;
            }, 1000);
            
            // Auto-hide after 10 seconds
            setTimeout(() => {
                clearInterval(slashInterval);
                priorityAlert.style.display = 'none';
                state.activePrioritySituation = null;
            }, 10000);
        }

        // Handle user login
        function handleLogin(e) {
            e.preventDefault();
            
            const discordId = document.getElementById('discord-id').value;
            const robloxUsername = document.getElementById('roblox-username').value;
            const position = document.getElementById('position').value;
            
            state.user = {
                discordId,
                robloxUsername,
                position
            };
            
            state.shiftStart = new Date();
            
            // Save to localStorage
            localStorage.setItem('lkv_user', JSON.stringify(state.user));
            localStorage.setItem('lkv_shift_start', state.shiftStart.toISOString());
            
            // Show confirmation modal
            confirmationModal.style.display = 'flex';
        }

        // Close confirmation and start CAD
        function closeConfirmation() {
            confirmationModal.style.display = 'none';
            startCAD();
        }

        // Start the CAD application
        function startCAD() {
            loginScreen.style.display = 'none';
            cadApp.style.display = 'grid';
            
            // Update user info
            displayUserId.textContent = state.user.discordId;
            
            // Start shift timer
            updateShiftTimer();
            setInterval(updateShiftTimer, 1000);
            
            // Load initial data if any
            loadInitialData();
        }

        // Update shift timer
        function updateShiftTimer() {
            const now = new Date();
            const diff = now - state.shiftStart;
            
            const hours = Math.floor(diff / 3600000);
            const minutes = Math.floor((diff % 3600000) / 60000);
            const seconds = Math.floor((diff % 60000) / 1000);
            
            shiftTimer.textContent = `Shift: ${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        // Handle sign out
        function handleSignOut() {
            // Clear localStorage
            localStorage.removeItem('lkv_user');
            localStorage.removeItem('lkv_shift_start');
            
            // Reset state
            state.user = null;
            state.shiftStart = null;
            state.calls = [];
            state.units = [];
            state.activeCall = null;
            state.activePrioritySituation = null;
            
            // Show login screen
            cadApp.style.display = 'none';
            loginScreen.style.display = 'flex';
            
            // Reset form
            loginForm.reset();
        }

        // Load initial data
        function loadInitialData() {
            // In a real app, this would fetch from an API
            // For now, we'll start with empty arrays
            renderCallList();
            renderUnitList();
        }

        // Handle new call creation
        function handleNewCall(e) {
            e.preventDefault();
            
            const callType = document.getElementById('call-type').value;
            const location = document.getElementById('call-location').value;
            const callerInfo = document.getElementById('caller-info').value;
            const initialNarrative = document.getElementById('initial-narrative').value;
            const priority = state.selectedPriority;
            
            const callId = `I-2023-${state.callCounter.toString().padStart(4, '0')}`;
            state.callCounter++;
            
            const newCall = {
                id: callId,
                type: callType,
                location,
                callerInfo,
                priority,
                narrative: initialNarrative ? [{
                    timestamp: new Date(),
                    text: initialNarrative
                }] : [],
                status: 'pending',
                assignedUnits: [],
                createdAt: new Date()
            };
            
            state.calls.push(newCall);
            renderCallList();
            
            // Close modal and reset form
            newCallModal.style.display = 'none';
            newCallForm.reset();
            
            // Select the new call
            selectCall(newCall.id);
        }

        // Handle adding a new unit
        function handleAddUnit(e) {
            e.preventDefault();
            
            const unitId = document.getElementById('unit-id').value;
            const rank = document.getElementById('unit-rank').value;
            const location = document.getElementById('unit-location').value;
            const status = state.selectedUnitStatus;
            const officerName = document.getElementById('officer-name').value;
            const recentCode = document.getElementById('recent-code').value;
            const department = state.selectedDepartment;
            
            // Validate unit ID
            const unitNum = parseInt(unitId);
            if (unitNum < 101 || unitNum > 499) {
                alert('Unit ID must be between 101 and 499');
                return;
            }
            
            const newUnit = {
                id: unitId,
                officer: officerName,
                rank,
                location,
                status,
                recentCode,
                department,
                statusTime: new Date(),
                addedTime: new Date()
            };
            
            state.units.push(newUnit);
            renderUnitList();
            
            // Close modal and reset form
            addUnitModal.style.display = 'none';
            addUnitForm.reset();
            
            // Reset status to default
            state.selectedUnitStatus = '10-8';
            document.querySelectorAll('.status-option').forEach(opt => {
                opt.classList.remove('active');
                if (opt.getAttribute('data-value') === '10-8') {
                    opt.classList.add('active');
                }
            });
        }

        // Render the call list
        function renderCallList() {
            if (state.calls.length === 0) {
                callList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <p>No active incidents</p>
                        <p class="text-sm">Create a new call to get started</p>
                    </div>
                `;
                return;
            }
            
            callList.innerHTML = '';
            state.calls.forEach(call => {
                const callElement = document.createElement('div');
                callElement.className = `call-item priority-${call.priority} ${state.activeCall && state.activeCall.id === call.id ? 'active' : ''}`;
                callElement.dataset.id = call.id;
                
                const priorityText = call.priority === 'high' ? 'HIGH' : 
                                   call.priority === 'medium' ? 'MEDIUM' : 'LOW';
                
                callElement.innerHTML = `
                    <div class="call-header">
                        <div class="call-id">${call.id}</div>
                        <div class="call-priority">${priorityText}</div>
                    </div>
                    <div class="call-location">${call.location}</div>
                    <div class="call-type">${call.type}</div>
                `;
                
                callElement.addEventListener('click', () => selectCall(call.id));
                callList.appendChild(callElement);
            });
        }

        // Render the unit list
        function renderUnitList() {
            if (state.units.length === 0) {
                unitList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <p>No units available</p>
                        <p class="text-sm">Add units to the status board</p>
                    </div>
                `;
                return;
            }
            
            // Group units by department
            const departments = {
                'law-enforcement': state.units.filter(u => u.department === 'law-enforcement'),
                'fire': state.units.filter(u => u.department === 'fire')
            };
            
            unitList.innerHTML = '';
            
            // Render Law Enforcement Department
            if (departments['law-enforcement'].length > 0) {
                const lawEnforcementSection = document.createElement('div');
                lawEnforcementSection.className = 'department-section';
                
                lawEnforcementSection.innerHTML = `
                    <div class="department-header">
                        <img src="https://ik.imagekit.io/seqcqjmzq/Lakview%20Police.webp?updatedAt=1762546742643" alt="Law Enforcement" class="department-logo">
                        <div class="department-title">Lakeview Law Enforcement</div>
                    </div>
                `;
                
                // Organize by rank
                const lawRanks = organizeByRank(departments['law-enforcement'], 'law');
                Object.keys(lawRanks).forEach(rankGroup => {
                    const rankSection = document.createElement('div');
                    rankSection.className = 'rank-section';
                    rankSection.innerHTML = `<div class="rank-title">${rankGroup}</div>`;
                    
                    lawRanks[rankGroup].forEach(unit => {
                        rankSection.appendChild(createUnitElement(unit));
                    });
                    
                    lawEnforcementSection.appendChild(rankSection);
                });
                
                unitList.appendChild(lawEnforcementSection);
            }
            
            // Render Fire Department
            if (departments['fire'].length > 0) {
                const fireSection = document.createElement('div');
                fireSection.className = 'department-section';
                
                fireSection.innerHTML = `
                    <div class="department-header">
                        <img src="https://ik.imagekit.io/seqcqjmzq/Lakeview%20Fire.webp?updatedAt=1762546987614" alt="Fire District" class="department-logo">
                        <div class="department-title">Lakeview City Fire District</div>
                    </div>
                `;
                
                // Organize by rank
                const fireRanks = organizeByRank(departments['fire'], 'fire');
                Object.keys(fireRanks).forEach(rankGroup => {
                    const rankSection = document.createElement('div');
                    rankSection.className = 'rank-section';
                    rankSection.innerHTML = `<div class="rank-title">${rankGroup}</div>`;
                    
                    fireRanks[rankGroup].forEach(unit => {
                        rankSection.appendChild(createUnitElement(unit));
                    });
                    
                    fireSection.appendChild(rankSection);
                });
                
                unitList.appendChild(fireSection);
            }
        }

        // Organize units by rank
        function organizeByRank(units, department) {
            const lawRanks = {
                'Commissioners': ['Commissioner', 'Chief of Police', 'Deputy Chief'],
                'Supervisor+': ['Sergeant', 'Lieutenant', 'Captain', 'Commander'],
                'Corporal': ['Corporal'],
                'Senior Officer': ['Senior Officer', 'Detective'],
                'Officer': ['Officer', 'Deputy', 'Trooper'],
                'Unranked': ['Cadet', 'Trainee', 'Probationary'],
                'Other': []
            };
            
            const fireRanks = {
                'Chiefs': ['Chief', 'Deputy Chief', 'Assistant Chief'],
                'Captain': ['Captain'],
                'Lieutenant+': ['Lieutenant', 'Battalion Chief'],
                'Firefighter': ['Firefighter', 'Engineer', 'Paramedic'],
                'Unranked': ['Probationary', 'Trainee', 'Cadet'],
                'Other': []
            };
            
            const rankStructure = department === 'law' ? lawRanks : fireRanks;
            const organized = {};
            
            // Initialize all rank groups
            Object.keys(rankStructure).forEach(group => {
                organized[group] = [];
            });
            
            // Sort units into rank groups
            units.forEach(unit => {
                let placed = false;
                for (const [group, ranks] of Object.entries(rankStructure)) {
                    if (ranks.some(rank => unit.rank.toLowerCase().includes(rank.toLowerCase()))) {
                        organized[group].push(unit);
                        placed = true;
                        break;
                    }
                }
                
                if (!placed) {
                    organized['Other'].push(unit);
                }
            });
            
            // Remove empty groups
            Object.keys(organized).forEach(group => {
                if (organized[group].length === 0) {
                    delete organized[group];
                }
            });
            
            return organized;
        }

        // Create a unit element
        function createUnitElement(unit) {
            const unitElement = document.createElement('div');
            unitElement.className = 'unit-item';
            unitElement.draggable = true;
            unitElement.dataset.id = unit.id;
            
            // Calculate time since status change
            const statusTime = new Date(unit.statusTime);
            const now = new Date();
            const diffMs = now - statusTime;
            const diffMins = Math.floor(diffMs / 60000);
            
            // Calculate time since unit was added
            const addedTime = new Date(unit.addedTime);
            const totalDiffMs = now - addedTime;
            const totalDiffMins = Math.floor(totalDiffMs / 60000);
            
            // Determine status class
            let statusClass = 'available';
            if (unit.status === '10-6') statusClass = 'busy';
            else if (unit.status === '10-7') statusClass = 'out-of-service';
            
            unitElement.innerHTML = `
                <div class="unit-status ${statusClass}"></div>
                <div class="unit-info">
                    <div class="unit-id">Unit ${unit.id}</div>
                    <div class="unit-officer">${unit.officer}  ${unit.rank}</div>
                    <div class="unit-location">${unit.location}</div>
                    <div class="unit-status-time">Status: ${unit.status} (${diffMins}m ago) | Added: ${totalDiffMins}m ago</div>
                </div>
                <div class="unit-actions">
                    <button class="unit-action-btn" data-id="${unit.id}" data-action="update">Update</button>
                    <button class="unit-action-btn" data-id="${unit.id}" data-action="remove">Remove</button>
                </div>
            `;
            
            // Add event listeners for unit actions
            unitElement.querySelectorAll('.unit-action-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const unitId = this.getAttribute('data-id');
                    const action = this.getAttribute('data-action');
                    
                    if (action === 'update') {
                        updateUnit(unitId);
                    } else if (action === 'remove') {
                        removeUnit(unitId);
                    }
                });
            });
            
            // Add drag events
            unitElement.addEventListener('dragstart', (e) => {
                e.dataTransfer.setData('text/plain', unit.id);
                unitElement.style.opacity = '0.5';
            });
            
            unitElement.addEventListener('dragend', () => {
                unitElement.style.opacity = '1';
            });
            
            return unitElement;
        }

        // Update unit information
        function updateUnit(unitId) {
            const unit = state.units.find(u => u.id === unitId);
            if (!unit) return;
            
            const newLocation = prompt('Enter new location:', unit.location);
            if (newLocation === null) return;
            
            const newStatus = prompt('Enter new status (10-8, 10-6, 10-7):', unit.status);
            if (newStatus === null) return;
            
            if (['10-8', '10-6', '10-7'].includes(newStatus)) {
                unit.location = newLocation;
                unit.status = newStatus;
                unit.statusTime = new Date();
                renderUnitList();
            } else {
                alert('Invalid status. Must be 10-8, 10-6, or 10-7');
            }
        }

        // Remove a unit
        function removeUnit(unitId) {
            if (confirm('Are you sure you want to remove this unit?')) {
                state.units = state.units.filter(u => u.id !== unitId);
                renderUnitList();
            }
        }

        // Select a call to view details
        function selectCall(callId) {
            state.activeCall = state.calls.find(call => call.id === callId);
            
            if (!state.activeCall) return;
            
            // Update the active incident header
            const priorityText = state.activeCall.priority === 'high' ? 'HIGH PRIORITY' : 
                               state.activeCall.priority === 'medium' ? 'MEDIUM PRIORITY' : 'LOW PRIORITY';
            
            activeIncidentHeader.innerHTML = `
                <div class="incident-title">
                    <div class="incident-id">${state.activeCall.id}</div>
                    <div class="incident-priority">${priorityText}</div>
                </div>
                <div class="incident-details">
                    <div class="detail-item">
                        <div class="detail-label">Location</div>
                        <div class="detail-value">${state.activeCall.location}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Call Type</div>
                        <div class="detail-value">${state.activeCall.type}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Caller</div>
                        <div class="detail-value">${state.activeCall.callerInfo || 'Unknown'}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Received</div>
                        <div class="detail-value">${state.activeCall.createdAt.toLocaleTimeString()}</div>
                    </div>
                </div>
            `;
            
            // Update narrative log
            renderNarrativeLog();
            
            // Update assigned units
            renderAssignedUnits();
            
            // Enable inputs
            narrativeInput.disabled = false;
            addNarrativeBtn.disabled = false;
            
            // Re-render call list to update active state
            renderCallList();
        }

        // Render the narrative log
        function renderNarrativeLog() {
            if (!state.activeCall || state.activeCall.narrative.length === 0) {
                narrativeLog.innerHTML = '<div class="text-center">No narrative entries yet</div>';
                return;
            }
            
            narrativeLog.innerHTML = '';
            state.activeCall.narrative.forEach(entry => {
                const entryElement = document.createElement('div');
                entryElement.className = 'narrative-entry';
                entryElement.innerHTML = `
                    <div class="narrative-time">[${entry.timestamp.toLocaleTimeString()}]</div>
                    <div>${entry.text}</div>
                `;
                narrativeLog.appendChild(entryElement);
            });
            
            // Scroll to bottom
            narrativeLog.scrollTop = narrativeLog.scrollHeight;
        }

        // Render assigned units
        function renderAssignedUnits() {
            if (!state.activeCall || state.activeCall.assignedUnits.length === 0) {
                assignedUnits.innerHTML = '<div class="text-center">No units assigned</div>';
                return;
            }
            
            assignedUnits.innerHTML = '';
            state.activeCall.assignedUnits.forEach(unitId => {
                const unit = state.units.find(u => u.id === unitId);
                if (!unit) return;
                
                const unitTag = document.createElement('div');
                unitTag.className = 'unit-tag';
                unitTag.innerHTML = `
                    Unit ${unitId}
                    <button class="unit-tag-remove" data-id="${unitId}">&times;</button>
                `;
                
                unitTag.querySelector('.unit-tag-remove').addEventListener('click', function(e) {
                    e.stopPropagation();
                    state.activeCall.assignedUnits = state.activeCall.assignedUnits.filter(id => id !== unitId);
                    renderAssignedUnits();
                });
                
                assignedUnits.appendChild(unitTag);
            });
        }

        // Add a narrative entry
        function addNarrativeEntry() {
            const text = narrativeInput.value.trim();
            if (!text || !state.activeCall) return;
            
            const entry = {
                timestamp: new Date(),
                text
            };
            
            state.activeCall.narrative.push(entry);
            renderNarrativeLog();
            
            // Clear input
            narrativeInput.value = '';
        }

        // Initialize the application when DOM is loaded
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
